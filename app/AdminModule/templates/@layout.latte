<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

    <title>{ifset #title}{include #title} - {/ifset}Nakopni školu</title>

    <!-- stylesheets -->
    <link rel="stylesheet" href="{$basePath}/node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{$basePath}/node_modules/bootstrap/dist/css/bootstrap.min.css.map">
    <link rel="stylesheet" href="{$basePath}/plugins/bootstrap3-wysiwyghtml5/bootstrap3-wysihtml5.min.css">
    <link rel="stylesheet" href="{$basePath}/css/app.min.css">
</head>

<body>
<div class="container-fluid">

    <!-- Navbar -->
    {if $presenter->getName() != 'Admin:Sign' and $user->isLoggedIn()}
        <div class="row">
            <nav class="navbar navbar-default">
                <div class="col-xs-12">
                    <div class="navbar-brand"><a n:href=":Admin:Dashboard:default">Nakopni školu</a></div>
                    <ul class="nav navbar-nav pull-right">
                        <li {ifCurrent Dashboard:}class="active"{/ifCurrent}>
                            <a n:href="Dashboard:">Seznam projektů</a>
                        </li>
                        <li {ifCurrent Project:create}class="active"{/ifCurrent}>
                            <a n:href="Project:create">Nový projekt</a>
                        </li>
                        <li>
                            <a n:href="Sign:out">Odhlásit se</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    {/if}


    {include content}
    <div class="row">
        <div class="col-xs-12">
            <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                {$flash->message}
            </div>
        </div>
    </div>

    {include content}

    <footer class="navbar">
        <div class="col-sm-12 text-center">
            <span>Copyright - Pink Fluffy Unicorn</span>
        </div>
    </footer>
</div>

<!-- Scripts -->
{block scripts}
    <script src="https://nette.github.io/resources/js/netteForms.min.js"></script>
    <script src="{$basePath}/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="{$basePath}/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="{$basePath}/plugins/bootstrap3-wysiwyghtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script src="{$basePath}/plugins/bootstrap3-wysiwyghtml5/locales/bootstrap-wysihtml5.cs-CZ.js"></script>
{/block}

</body>
</html>